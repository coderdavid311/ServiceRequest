<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="service_request" resource="default" engine="innodb" comment="Service Request">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="customer_name" nullable="false" length="255" comment="Customer Name"/>
        <column xsi:type="varchar" name="customer_email" nullable="false" length="255" comment="Customer Email"/>
        <column xsi:type="varchar" name="customer_mobile" nullable="false" length="20" comment="Customer Mobile"/>
        <column xsi:type="varchar" name="device_serial_number" nullable="false" length="255" comment="Device Serial Number"/>
        <column xsi:type="varchar" name="model_number" nullable="false" length="255" comment="Model Number"/>
        <column xsi:type="varchar" name="issue_type" nullable="true" length="50" comment="Issue Type"/>
        <column xsi:type="text" name="issue_description" nullable="true" comment="Issue Description"/>
        <column xsi:type="varchar" name="city" nullable="false" length="100" comment="City"/>
        <column xsi:type="varchar" name="state" nullable="false" length="100" comment="State"/>
        <column xsi:type="varchar" name="fasc_center" nullable="false" length="100" comment="FASC Center"/>
        <column xsi:type="varchar" name="status" nullable="false" length="20" comment="Status" default="new"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="SERVICE_REQUEST_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="service_request" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>

        <index referenceId="SERVICE_REQUEST_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
</schema>
